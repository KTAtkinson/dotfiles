# Open google music and assign to window
bindsym $mod+Shift+v exec google-chrome-stable --app=https://music.google.com --profile-directory="Profile 1"
for_window [instance="music.google.com"] move window workspace $ws4

# Lock screen and suspend
bindsym $mod+Shift+z exec i3lock --color 111111 -f && systemctl suspend

bindsym $mod+Shift+s exec gnome-screenshot -a

# Mute mic
bindsym Pause exec --no-startup-id pactl set-source-mute $(pactl list sources short | grep ".*_input.*RUNNING" | cut -f2) toggle
